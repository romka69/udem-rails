%li.list-group-item
  - if lesson.viewed?(current_user)
    .text-success.far.fa-check-square
  - else
    .text-secondary.far.fa-square
  = link_to lesson.title, course_lesson_path(@course, lesson)
  - if policy(lesson).edit?
    .float-right
      = link_to raw("<i class='fas fa-pen'></i>"), edit_course_lesson_path(@course, lesson),
                class: "btn btn-sm btn-outline-info"
      = link_to raw("<i class='fas fa-trash'></i>"), course_lesson_path(@course, lesson),
                method: :delete, data: { confirm: "You are sure?" }, class: "btn btn-sm btn-outline-danger"