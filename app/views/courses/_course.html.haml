.card
  .card-header
    .fa.fa-graduation-cap
    = link_to course.title, course_path(course)

  .card-body
    %small= simple_format(course.short_description)

  .card-footer
    .text-center
      = number_to_currency(course.price, locale: :en, precision: 0, delimiter: " ")

  .card-footer
    .row
      .col-6
        .fa.fa-globe-africa
        = course.language
      .col-6
        .text-right
          .fa.fa-signal
          = course.level

  .card-footer
    .row
      .col-6
        .far.fa-clock
        = course.created_at.strftime("%d-%b-%y")
      .col-6
        .text-right
          .fa.fa-chalkboard-teacher
          = course.user.username

  .card-footer.text-right
    = link_to 'Show', course_path(course), class: "btn btn-sm btn-primary"
    = link_to 'Edit', edit_course_path(course), class: "btn btn-sm btn-info"
    = link_to 'Destroy', course_path(course), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger"