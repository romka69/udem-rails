.card
  .card-header
    .fa.fa-graduation-cap
    = link_to course.title, course_path(course)

  .card-body
    %small= simple_format(course.short_description)

  .card-footer
    .text-center
      = enrollment_button(course)
      .row
      != review_button(course)

  .card-footer
    .row
      .col-4
        .text-left
          .text-warning.fa.fa-star
          = course.average_rating
      .col-4
        .text-center
          .fas.fa-user-graduate
          = course.enrollments_count
      .col-4
        .text-right
          .fa.fa-tasks
          = course.lessons_count

  .card-footer
    .row
      .col-6
        .fa.fa-globe-africa
        = course.language
      .col-6
        .text-right
          .fa.fa-signal
          = course.level

  .card-footer
    .row
      .col-6
        .far.fa-clock
        = course.created_at.strftime("%e %B %Y")
      .col-6
        .text-right
          .fa.fa-chalkboard-teacher
          = link_to course.user.username, user_path(course.user)

  - if current_user
    - if policy(course).edit?
      .card-footer.text-right
        = link_to 'Edit', edit_course_path(course), class: "btn btn-sm btn-info"
        = link_to 'Delete', course_path(course), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger"