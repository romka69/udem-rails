- content_for :title do
  All Courses
  \|
  Udem

%h1
  Courses
  .badge.badge-info
    - if current_page?(action: 'index')
      = Course.count
    - else
      = @courses.count

.row.pt-4
  .col-lg-2.pb-4
    = search_form_for @ransack_courses, url: @ransack_path, as: :courses_search  do |f|
      = f.label :title
      = f.search_field :title_or_short_description_cont, class: "form-control form-control-sm"
      = f.label :description
      = f.search_field :short_description_cont, class: "form-control form-control-sm"
      = f.label :language
      = f.select :language_cont, Course.languages, include_blank: true, class: "form-control form-control-sm"
      = f.label :level
      = f.select :level_cont, Course.levels, include_blank: true, class: "form-control form-control-sm"
      = f.label :price
      = f.search_field :price_eq, class: "form-control form-control-sm"
      = f.label :user_email
      = f.search_field :user_email_cont, class: "form-control form-control-sm"
      = f.submit
      = link_to @ransack_path, class: "btn btn-sm" do
        .fa.fa-sync

  .col-lg-10
    .card-columns
      - @courses.each do |course|
        = render "courses/course", course: course

    != pagy_bootstrap_nav(@pagy)
