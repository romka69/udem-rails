- content_for :title do
  = @course.title
  \|
  Udem

%nav.mb-4{"aria-label" => "breadcrumb"}
  %ol.breadcrumb.mb-0
    %li.breadcrumb-item
      = link_to "Courses", courses_path

    %li.breadcrumb-item.active{"aria-current" => "page"}
      = @course.title

.row
  .col-lg-6.mb-3
    = render "courses/course", course: @course
  .col-lg-6
    - if policy(@course).owner?
      = link_to "Add Lesson", new_course_lesson_path(@course), class: "btn btn-primary btn-sm text-center btn-block mb-4"

    - if @lessons
      - @lessons.each do |lesson|
        = render "lessons/lesson", lesson: lesson