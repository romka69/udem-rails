- content_for :title do
  Edit
  = @enrollment
  \|
  Udem

%nav.mb-4{"aria-label" => "breadcrumb"}
  %ol.breadcrumb.mb-0
    %li.breadcrumb-item
      = link_to "Enrollments", enrollments_path

    %li.breadcrumb-item
      = link_to @enrollment, enrollment_path(@enrollment)

    %li.breadcrumb-item.active{"aria-current" => "page"}
      Edit

.card
  .card-header
    %h1 Editing enrollment

  .card-body
    = render 'form'

  .card-footer
    = link_to 'Show enrollment', @enrollment, class: "card-link"
    = link_to 'All enrollments', enrollments_path, class: "card-link"
