- content_for :title do
  Edit
  = @enrollment
  \|
  Udem

%nav.mb-4{"aria-label" => "breadcrumb"}
  %ol.breadcrumb.mb-0
    %li.breadcrumb-item
      = link_to @enrollment.course.title, course_path(@enrollment.course)

    %li.breadcrumb-item
      Reviews

    %li.breadcrumb-item
      = link_to @enrollment, enrollment_path(@enrollment)

    %li.breadcrumb-item.active{"aria-current" => "page"}
      Edit

.card
  .card-header
    %h1 Add a Review

  .card-body
    = render 'form'

  .card-footer
    = link_to 'Show enrollment', @enrollment, class: "card-link"
    = link_to 'Back to course', course_path(@enrollment.course), class: "card-link"
